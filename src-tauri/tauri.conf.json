{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "RightsGuard",
  "version": "1.0.0",
  "identifier": "com.rightsguard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "RightsGuard - 版权申诉工具",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri:; connect-src 'self' https://www.bilibili.com tauri:; img-src 'self' data: tauri:; font-src 'self' data: tauri:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "copyright": "Copyright © 2024 RightsGuard Team",
    "shortDescription": "B站版权侵权自动化申诉工具",
    "longDescription": "RightsGuard - 高效、稳定的B站版权侵权自动化申诉工具",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "plugins": {}
}